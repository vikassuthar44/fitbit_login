<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_fire"
        android:layout_marginTop="@dimen/fiftyDp"
        android:padding="@dimen/twentyDp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/calCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:text="1,434"
        android:textColor="@color/black"
        android:textSize="@dimen/fontTwentySp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calCount"
        android:text="Cals"
        android:textColor="@color/black"
        android:textSize="@dimen/fontSeventeenSp"/>



    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="250dp"
        style="?android:progressBarStyleHorizontal"
        android:progress="30"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/circle"/>

</androidx.constraintlayout.widget.ConstraintLayout>